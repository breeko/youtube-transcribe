{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "*.html",
    "resources/*.svg",
    "resources/*.png",
    "**/*.ts",
    "**/*.tsx",
    "pages/_app.tsx"
  ]
}
